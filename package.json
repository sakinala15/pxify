{
  "name": "pixelscale",
  "publisher": "9bd71a5c-1164-4065-b831-25e708d68710",
  "displayName": "pxify",
  "description": "Pxify is a powerful Visual Studio Code extension that simplifies the process of converting pixel units to rem, em, vh, and vw units in CSS, SCSS, and SASS files. With its intuitive shortcuts and features, Pxify streamlines your workflow and ensures consistent unit usage throughout your project.",
  "version": "0.3.1",
  "icon":"images/logo1.png",
  "engines": {
    "vscode": "^1.89.0"
  },
 "categories": [
    "Other"
  ],
  "files":[
    "images/demo.mp4"
  ],
  "license": "MIT",
  "repository": {
    "type": "",
    "url": ""
  },
  "keywords":[
    "rem",
    "px rem",
    "px to rem",
    "px2rem",
    "rem to px",
    "css rem",
    "vw",
    "px to vw",
    "vw to px",
    "em to px",
    "px to em",
    "em",
    "px to vh",
    "vh to px"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:sass"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "completion": [
      {
          "type": "keyword",
          "language": "html",
          "pattern": "\\bpx\\b",
          "items": [
              {
                  "label": "Extension.ConvertPxToVh",
                  "kind": "keyword",
                  "insertText": "Extension.ConvertPxToVh",
                  "documentation": "Converts px to vh"
              }
          ]
      }
  ],
    "commands": [
      {
        "command": "extension.convertPxToRem",
        "title": "pxify - rem"
      },
      {
        "command": "extension.changeBaseFontSize",
        "title": "pxify root font size"
      },
      {
        "command": "extension.changeviewportvh_vw",
        "title": "pxify viewport vh/vw"
      },
     
      {
        "command": "extension.convertPxToEm",
        "title": "pxify - em"
      },
      {
        "command": "extension.convertPxToVh",
        "title": "pxify - vh"
      },
      {
        "command": "extension.convertPxToVw",
        "title": "pxify - vw"
      }
    ],
   "menus": {
    "editor/context": [
      {
        "command": "extension.convertPxToRem",
        "group": "1_convert",
        "when": "editorLangId == css || editorLangId == scss || editorLangId == sass"
    },
    {
        "command": "extension.convertPxToEm",
        "group": "1_convert",
        "when": "editorLangId == css || editorLangId == scss || editorLangId == sass"
    },
    {
      "command": "extension.convertPxToVw",
      "group": "1_convert",
      "when": "editorLangId == css || editorLangId == scss || editorLangId == sass"
    },
    {
      "command": "extension.convertPxToVh",
      "group": "1_convert",
      "when": "editorLangId == css || editorLangId == scss || editorLangId == sass"
    }
    ]
},

    "keybindings": [
      {
        "command": "extension.changeBaseFontSize",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorLangId == css || editorLangId == scss || editorLangId == sass"
      },
      {
        "command": "extension.changeviewportvh_vw",
        "key": "ctrl+shift+z",
        "mac": "cmd+shift+z",
        "when": "editorLangId == css || editorLangId == scss || editorLangId == sass"
      },
      {
        "command": "extension.convertPxToRem",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == css || editorLangId == scss || editorLangId == sass"
      },
      {
        "command": "extension.convertPxToEm",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorLangId == css || editorLangId == scss || editorLangId == sass"
      },
      {
        "command": "extension.convertPxToVw",
        "key": "ctrl+shift+w",
        "mac": "cmd+shift+w",
        "when": "editorLangId == css || editorLangId == scss || editorLangId == sass"
      },
      {
        "command": "extension.convertPxToVh",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "editorLangId == css || editorLangId == scss || editorLangId == sass"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "esbuild": "^0.21.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
