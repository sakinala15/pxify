{
  "name": "pixelscale",
  "publisher": "9bd71a5c-1164-4065-b831-25e708d68710",
  "displayName": "pxify",
  "description": "converting 1.px to rem, 2.rem to px, 3.em to px, 4.px to rem 5.rem to em, 6.em to rem, note:Calculation based on a root font-size of 16 pixel.",
  "version": "0.1.2",
  "icon":"images/logo1.png",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "repository": {
    "type": "",
    "url": ""
  },
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.changeBaseFontSize",
        "title": "Change Base Font Size"
      },
      {
        "command": "extension.convertPxToRem",
        "title": "Convert px to REM"
      },
      {
        "command": "extension.convertPxToEm",
        "title": "Convert px to EM"
      }
    ],
   "menus": {
    "editor/context": [
      {
        "command": "extension.convertPxToRem",
        "group": "1_convert",
        "when": "editorLangId == css || editorLangId == scss"
    },
    {
        "command": "extension.convertPxToEm",
        "group": "2_convert_em",
        "when": "editorLangId == css || editorLangId == scss"
    }
    ]
},

    "keybindings": [
      {
        "command": "extension.changeBaseFontSize",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorLangId == css || editorLangId == scss"
      },
      {
        "command": "extension.convertPxToRem",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == css || editorLangId == scss"
      },
      {
        "command": "extension.convertPxToEm",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorLangId == css || editorLangId == scss"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "esbuild": "^0.21.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
